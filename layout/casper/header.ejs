<header class="site-head" <% if (theme.cover) { %> style="background: #24282b url(<%- theme.cover %>) 0 -20%" <% } %>>
    <div class="vertical">
        <div class="site-head-content inner">
            <% if (theme.logo) { %> <a class="blog-logo" href="<%- config.root %>"><img class="round" src="<%- theme.logo %>" alt="Blog Logo"/></a> <% } %>
            <h1 class="blog-title"><%- config.title %></h1>
            <h2 class="blog-description"><%- config.subtitle %></h2>
            <button id="showMenu">Menu</button>
        </div>
    </div>
</header>
